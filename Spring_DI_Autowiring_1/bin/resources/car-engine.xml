<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
			"https://www.springframework.org/dtd/spring-beans-2.0.dtd">
			<beans>
<!-- But here we can actually use the engine as the inner bean andso it need not be used separately -->
<bean id="c" class="beans.Car" autowire="constructor"> 
</bean>

<bean class ="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>

<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"></bean>

<bean id="engine" class="beans.Engine" > 
<property name="model"><value>Honda</value></property>
</bean>


<bean id="engine1" class="beans.Engine" autowire-candidate="false"> 
<property name="model"><value>Suzuki</value></property>
</bean>
<bean id="engine2" class="beans.Engine" autowire-candidate="false"> 
<property name="model"><value>Suzuki</value></property>
</bean>

</beans>