<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Spring_MVC_Demo_XML</display-name>
  <servlet>
  <!--  Here by default it searches servletname-servlet.xm file -->
  
  <servlet-name>springmvcxml</servlet-name>
  <servlet-class>servlets.HelloServlet</servlet-class>
  <!--  Incase we need to customize the spring xml file name we need init params or context params -->
  </servlet>
  <servlet-mapping>
  <servlet-name>springmvcxml</servlet-name>
  <url-pattern>/hello</url-pattern>
  </servlet-mapping>
 
</web-app>