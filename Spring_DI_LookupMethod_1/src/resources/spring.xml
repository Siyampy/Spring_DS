<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
			"https://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>

<!-- For car Interface Lookup method  -->
<bean id="c" class="beans.Car">
<lookup-method name="myCarEngine" bean="e"/>
</bean>
<bean id="e" class="beans.Engine">
<property name="name"><value>SwiftEngine</value></property>
</bean>


<!-- For Bus Abstract class Lookup method  -->

<bean id="c1" class="beans.Bus">
<lookup-method name="myBusEngine" bean="e"/>
</bean>
<bean id="e1" class="beans.Engine">
<property name="name"><value>Tata Engine</value></property>
</bean>
<!-- For Bus Concrete class Lookup method  -->

<bean id="c2" class="beans.Truck">
<lookup-method name="myTruckEngine" bean="e2"/>
</bean>
<bean id="e2" class="beans.Engine">
<property name="name"><value>Ashok Leyland Engine</value></property>
</bean>
</beans>